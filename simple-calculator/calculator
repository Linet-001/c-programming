#include<stdio.h>
#include<stdlib.h>

void main()
int a, b;
sum'+', subtraction'-', multiplication'*', division'/';
char operator;

printf("Enter two integers a & b");
scanf("%d, %d", &a, &b);
printf("Enter an operator);
scanf("%c", &operator);

switch(operator)
{  
   case'+':
        printf("%d", sum=a+b);
	break;
   case'-':
       printf("%d", subtraction=a-b);
       break;
   case'*':
       printf("%d", multiplication=a*b);
       break;
   case'/':
       printf("%d", division=a/b);
       break;
    default:
       printf("error");
    getch();
 }

